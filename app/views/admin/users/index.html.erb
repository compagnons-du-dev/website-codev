<div class="row">
  <div class="col-lg-12">
      <ol class="breadcrumb">

          <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
          Administration <span class="caret"></span>
        </a>
        <ul class="dropdown-menu" role="menu">
          <%= render 'admin/nav'%>
        </ul>
      </li>

  <li class="active">Utilisateur</li>
    </ol>


  <h2 class="admin-title">Utilisateurs</h2>

  <table class="table table-striped table-hover text-center">
    <tbody>
      <% @users.each do |user| %>
      <tr class="user-<%= user.id %>">
        <td><h4 class="text-primary"><%= user.first_name %></h4></td>
        <td><h4><%= user.email %></h4></td>
        <td>
            <%= form_for [:admin, user] do |f| %>
              <h4>
              <%= f.hidden_field :admin, value: !user.admin %>
            <% unless user.admin? %>
              <%= f.submit 'Ajouter droit administrateur', class: 'btn btn-info add-admin' %>
            <% else %>
              <%= f.submit 'Revoquer droit administrateur', class: 'btn btn-warning remove-admin' %>
            <% end %>
            </h4>
          <% end %>
        </td>
        <td><h4><%= link_to 'Supprimer', admin_user_path(user), method: :delete, class: 'btn btn-danger remove' %></h4></td>
      </tr>

      <% end %>
    </tbody>
  </table> 

    </div>
  </div>
</div>