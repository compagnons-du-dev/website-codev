<% provide(:title, 'Inscription') %>

<div class="row text-center">
  <div class="col-lg-offset-4 col-lg-4">
    <%= form_for(:session, url: sessions_path, html: {id: 'new_session', class: 'form-horizontal'}) do |f| %>
      <h1>Connexion</h1>

      <div class="form-group">
        <div class="col-sm-12">
          <%= f.email_field :email, class: 'form-control input-lg text-center', placeholder: 'Email' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-12">
          <%= f.password_field :password, class: 'form-control input-lg text-center', placeholder: 'Mot de passe' %>
        </div>
      </div>
      <%= f.submit 'Valider', class: 'btn btn-primary btn-lg' %>
      <div>
        <br>
        <p><%= link_to 'Pas encore de compte ?', new_user_path %></p>
      </div>
    <% end %>
  </div>
</div>