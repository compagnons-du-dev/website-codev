@import 'variables'

.home-carousel
  height: 450px
  //background: asset-url("home-photo.jpg") no-repeat center
  background-size: cover

  .v-container, .v-center
    height: 100%
  .v-container
    display: table
  .v-center
    display: table-cell
    vertical-align: middle

.home-carousel-title
  color: #333
  font-size: 3.3em
  span
    color: $co-dev-color

.home-items
  margin-bottom: 50px
  img
    width: 100%
  .hidden-lg
    margin-bottom: 30px 
.home-items-title
  font-size: 2.2em
  margin-bottom: 15px
.home-items-content
  font-size: 1.1em

.home-title
  margin-top: 0px
  margin-bottom: 48px
  font-size: 37px

.home-articles
  margin-bottom: 40px

.home-about
  margin-top: 25px
  margin-bottom: 40px
  h4
    font-size: 1.4em
    line-height: 1.4 !important
  img
    width: 100%


.home-partners
  margin-top: 20px
  .row
    display: table
  .col
    display: inline-block
    vertical-align: middle
    float: none
  .logo-ms
    width: 90%
  .logo-allianz
    width: 80%
  .logo-orange
    width: 38%
  .logo-sap
    width: 55%
  .logo-fondation-de-france
    width: 42%
