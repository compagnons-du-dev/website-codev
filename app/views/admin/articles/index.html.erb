
<div class="row">
  <div class="col-lg-12">
      <ol class="breadcrumb">

          <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
          Administration <span class="caret"></span>
        </a>
        <ul class="dropdown-menu" role="menu">
          <%= render 'admin/nav'%>
        </ul>
      </li>

  <li class="active">Articles</li>
    </ol>

    <div class="row">
      <div class="col-lg-6">
        <h2 class="admin-title">Articles</h2>
      </div>
      <div class="col-lg-6">
        <h1 class="text-right btn-right">
          <%= link_to 'Ajouter un article', new_admin_article_path, class: 'btn-primary btn btn-lg' %>
        </h1>
      </div>
    </div>

  <table class="table table-striped table-hover">
    <tbody>
      <% @articles.each do |article| %>
      <tr class="article-<%= article.id %>">
        <td class="text-primary"><h4><%= link_to article.display_name, article %></h4></td>

        <td><%= link_to 'Editer', edit_admin_article_path(article), class: 'btn btn-info' %></td>
        <td><%= link_to 'Supprimer',  admin_article_path(article), class: 'btn btn-danger remove', method: :delete, data: { confirm: 'Êtes-vous sûr de vouloir supprimer définitivement cette article' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table> 

    <div class="text-center">
    <%= will_paginate @articles, renderer: BootstrapPagination::Rails, previous_label: 'Précedent', next_label: 'Suivant' %>
  </div>

    </div>
  </div>
</div>