<div class="row text-center">
  <div class="col-lg-offset-4 col-lg-4">
    <%= form_for @user, html: {class: 'form-horizontal'} do |f| %>
      <h1>Crée mon compte</h1>
      <% if @user.errors.any? %>
        <div class="alert alert-danger">
          <%= @user.errors.full_messages.map { |msg| content_tag(:p, msg) }.join.html_safe %>
        </div>
      <% end %>

      <div class="form-group">
        <div class="col-sm-12">
          <%= f.text_field :first_name, class: 'form-control input-lg text-center', placeholder: 'Prénom' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-12">
          <%= f.email_field :email, class: 'form-control input-lg text-center', placeholder: 'Email' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-12">
          <%= f.password_field :password, class: 'form-control input-lg text-center', placeholder: 'Mot de passe' %>
        </div>
      </div>
      <%= f.submit 'Valider', class: 'btn btn-primary btn-lg btn-max' %>
      <div>
        <br>
        <p><%= link_to 'Vous avez déjà un compte ?', new_session_path %></p>
      </div>
    <% end %>
  </div>
</div>