source 'https://rubygems.org'

# Basic
gem 'rails', '4.1.5'
gem 'uglifier'
gem 'coffee-rails'
gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder'

# Server
gem 'thin'

# Auth
gem 'bcrypt'

# Sass
gem 'sass-rails'
gem 'bootstrap-sass'
gem 'bootswatch-rails'
gem 'bootstrap-wysihtml5-rails'
gem 'will_paginate-bootstrap'
gem 'font-awesome-rails'

# Route
gem 'friendly_id'

# File and image
gem 'paperclip'

# i18n
gem 'rails-i18n'
gem 'i18n'

gem 'dotenv-rails'


group :development do
  gem 'spring'
  gem 'sqlite3'
  gem 'quiet_assets'
  gem 'better_errors'
  gem 'binding_of_caller'
end

group :development, :test do
  gem 'rspec-rails'
  gem 'pry-rails'
  gem 'faker'
end

group :test do
  gem 'capybara'
  gem 'factory_girl_rails'
end

group :production do
  gem 'aws-sdk'
  gem 'pg'
  gem 'rails_12factor'
end


