
  <ol class="breadcrumb">

          <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
          Administration <span class="caret"></span>
        </a>
        <ul class="dropdown-menu" role="menu">
          <%= render 'admin/nav'%>
        </ul>
      </li>

        <li><%= link_to 'Pages', admin_pages_path %></li>
  <li class="active"><%= 'Nouvelle page' %></li>
    </ol>

<div class="row">
  <div class="col-lg-offset-4 col-lg-4 col-md-offset-4 col-md-4 col-sm-offset-3 col-sm-6 well">
    <%= form_for [:admin, @page], html: {class: 'form-horizontal'} do |f| %>
      <h1 class="text-center">Crée une page</h1>
      <br>
      <% if @page.errors.any? %>
        <div class="alert alert-danger">
          <%= @page.errors.full_messages.map { |msg| content_tag(:p, msg) }.join.html_safe %>
        </div>
      <% end %>

      <div class="form-group">
        <div class="col-sm-12">
          <h4>Nom</h4>
          <%= f.text_field :name, class: 'form-control input-lg', placeholder: 'Nom' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-12">
          <h4>Tags</h4>
          <%= f.text_field :tags, class: 'form-control input-lg', placeholder: 'Tags', value: '' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-12">
          <h4>Categorie</h4>
          <%= f.select :category, options_for_select(Category.all.map {|c| [c.display_name, c.name]}.push(['Aucune catégorie', false])), {},class: 'form-control input-lg' %>
        </div>
      </div>

      <%= f.submit 'Valider', data: { disable_with: '...' }, class: 'btn btn-primary btn-lg btn-submit' %>
    <% end %>
  </div>
</div>