<div class="row">
  <div class="col-lg-12">
      <ol class="breadcrumb">

          <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
          Administration <span class="caret"></span>
        </a>
        <ul class="dropdown-menu" role="menu">
          <%= render 'admin/nav'%>
        </ul>
      </li>

  <li class="active">Catégories</li>
    </ol>

    <div class="row">
      <div class="col-lg-6">
        <h2 class="admin-title">Catégories</h2>
      </div>
      <div class="col-lg-6">
        <h1 class="text-right btn-right">
          <%= link_to 'Ajouter une categorie', new_admin_category_path, class: 'btn-primary btn btn-lg' %>
        </h1>
      </div>
    </div>

  <table class="table table-striped table-hover text-center">
    <tbody>
      <% @categories.reject {|p| p.name == 'home'}.each do |category| %>
      <tr class="category-<%= category.id %>">
        <td class="text-primary text-left"><h4><%= category.display_name %></h4></td>

        <td>
          <% category.pages.each do |page| %>
            <%= link_to page.display_name, page, class: 'btn btn-default btn-padding' %>
          <% end %>
        </td>

        <td class="text-primary"><%= link_to 'Ajouter un page', new_admin_page_path, class: 'btn btn-success' %></td>

        <td><%= link_to 'Editer', edit_admin_category_path(category), class: 'btn btn-info' %></td>
        <td><%= link_to 'Supprimer',   admin_category_path(category), class: 'btn btn-danger remove', method: :delete, data: { confirm: 'Êtes-vous sûr de vouloir supprimer définitivement cette catégories' } %></td>
      </tr>

      <% end %>
    </tbody>
  </table> 

    </div>
  </div>
</div>