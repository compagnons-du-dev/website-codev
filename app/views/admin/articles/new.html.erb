
  <ol class="breadcrumb">

          <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
          Administration <span class="caret"></span>
        </a>
        <ul class="dropdown-menu" role="menu">
          <%= render 'admin/nav'%>
        </ul>
      </li>

        <li><%= link_to 'Articles', admin_articles_path %></li>
  <li class="active">Nouvelle article</li>
    </ol>

<div class="row">
  <div class="col-lg-offset-3 col-lg-6 col-md-offset-4 col-md-4 col-sm-offset-3 col-sm-6 well">
    <%= form_for [:admin, @article], html: {class: 'form-horizontal'} do |f| %>
      <h1 class="text-center">Cr√©e une article</h1>
      <br>
      <% if @article.errors.any? %>
        <div class="alert alert-danger">
          <%= @article.errors.full_messages.map { |msg| content_tag(:p, msg) }.join.html_safe %>
        </div>
      <% end %>

      <div class="form-group">
        <div class="col-sm-12">
          <h4>Titre</h4>
          <%= f.text_area :name, class: 'form-control input-lg no-editor', placeholder: 'Ajouter un titre a votre article', rows: 3 %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-12">
          <h4>Tags</h4>
          <%= f.text_field :tags, class: 'form-control input-lg', placeholder: 'Tags', value: '' %>
        </div>
      </div>


      <div class="form-group">
        <div class="col-sm-12">
          <h4>Image</h4>
          <%= f.file_field :image %>
        </div>
      </div>

      <%= f.submit 'Valider', data: { disable_with: '...' }, class: 'btn btn-primary btn-lg btn-submit' %>
    <% end %>
  </div>
</div>