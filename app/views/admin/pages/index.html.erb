<div class="row">
  <div class="col-lg-12">
    
    <ol class="breadcrumb">

          <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
          Administration <span class="caret"></span>
        </a>
        <ul class="dropdown-menu" role="menu">
          <%= render 'admin/nav'%>
        </ul>
      </li>

      <li class="active">Pages</li>
    </ol>

    <div class="row">
      <div class="col-lg-6">
        <h2 class="admin-title">Pages</h2>
      </div>
      <div class="col-lg-6">
        <h1 class="text-right btn-right">
          <%= link_to 'Ajouter un page', new_admin_page_path, class: 'btn-primary btn btn-lg' %>
        </h1>
      </div>
    </div>

  <table class="table table-striped table-hover text-center">
    <tbody>
      <% @pages.each do |page| %>
      <tr class="page-<%= page.id %>">
        <td class="text-primary"><h4><%= link_to page.display_name, page %></h4></td>

        <td class="text-primary">
          <% if page.category %>
          <p class="btn btn-default"><%= page.category.display_name %></p>
          <% else %>
          <p class="btn btn-default">Aucune catégorie</p>
          <% end %> 
        </td>

        <td><%= link_to 'Editer', edit_admin_page_path(page), class: 'btn btn-info' %></td>
        <td><%= link_to 'Supprimer',  admin_page_path(page), class: 'btn btn-danger remove', method: :delete, data: { confirm: 'Êtes-vous sûr de vouloir supprimer définitivement cette page ?' } unless page.name == 'accueil' %></td>
      </tr>

      <% end %>
    </tbody>
  </table> 

    </div>
  </div>
</div>