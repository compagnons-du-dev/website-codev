<div class="modal fade" id="new-content-text" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-lg">
    <%= form_for [:admin, associate, @content], html: {class: 'form-horizontal'} do |f| %>
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h3 class="modal-title text-center" >Ajouter un paragraphe</h3>
      </div>
      <div class="modal-body">

        <%= f.hidden_field :partial, value: 'content_text' %>

        <div class="form-group">
          <div class="col-sm-12">
            <%= f.text_area :value, class: 'form-control input-lg', placeholder: 'Rédiger votre contenu ici', rows: 40 %>
          </div>
        </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger btn-lg" data-dismiss="modal">Annuler</button>
          <%= f.submit 'Ajouter', class: 'btn btn-success btn-lg' %>
      </div>
    </div>
    <% end %>
  </div>
</div>


